<h1>Invites index</h1>

<%= link_to 'New invite', new_invite_path %>
<table class="table table-striped table-hover">
  <thead>
    <tr class="sortable-table">
      <th>
        Invite Id
      </th>
      <th>
        Email
      </th>
      <th>
        Group Id
      </th>
      <th>
        Token
      </th>
      <th>
        Sender id
      </th>
      
      <th>
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% Invite.all.each do |invite| %>
      <tr>
        <th>
          <p><%= invite.id %></p>
        </th>
        <th>
          <p><%= invite.email %></p>
        </th>
        <th>
          <p><%= invite.group_id %></p>
        </th>
        <th>
          <p><%= invite.token %></p>
        </th>
        <th>
          <p><%= invite.sender_id %></p>
        </th>
        <th>
          <p><%= invite.recipient_id %></p>
        </th>
        
      </tr>

    <% end %> 
  </tbody>
</table>

